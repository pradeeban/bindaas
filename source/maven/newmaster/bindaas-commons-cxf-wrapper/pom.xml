		<importPackage>org.osgi.*,org.apache.commons.logging,edu.emory.cci.bindaas.framework.*,!*</importPackage>
		<bundleActivator>edu.emory.cci.bindaas.commons.cxf.bundle.Activator</bundleActivator>
		<includeResources>spring=spring</includeResources>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-bundle-jaxrs</artifactId>
			<version>2.7.4</version>
