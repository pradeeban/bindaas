	<artifactId>bindaas-commons-cxf-wrapper</artifactId>
	<version>0.0.1</version>
	<packaging>bundle</packaging>
	<properties>
		<exportPackage>edu.emory.cci.bindaas.commons.cxf</exportPackage>
		<exportPackageFromEmbeddedDependecies>javax.ws.rs*,javax.servlet*,org.apache.cxf*</exportPackageFromEmbeddedDependecies>
