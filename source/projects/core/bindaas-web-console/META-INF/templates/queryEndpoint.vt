					function executeAPI(url, buttonClicked) {
						var queryString = "?api_key=$apiKey&";
						$(buttonClicked).parent().find("input").each(function() {

							if ($(this).attr("value") && $(this).attr("value") != "") {
								queryString = queryString + $(this).attr("id") + "=" + $(this).attr("value") + '&';
							}

